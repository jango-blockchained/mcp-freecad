{
  "auth": {
    "api_key": "development",
    "enabled": true
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug": true,
    "workers": 1,
    "name": "mcp-freecad",
    "version": "0.1.0",
    "mcp": {
      "transport": "stdio",
      "protocol_version": "0.1.0",
      "enable_tool_sampling": true,
      "tool_sampling_rate": 1.0
    }
  },
  "cache": {
    "default_ttl": 30.0,
    "max_size": 100,
    "enabled": true
  },
  "recovery": {
    "max_retries": 5,
    "retry_delay": 2.0,
    "backoff_factor": 1.5,
    "max_delay": 30.0
  },
  "freecad": {
    "path": "squashfs-root/usr/bin/freecad",
    "python_path": "squashfs-root/usr/bin/python3",
    "module_path": "squashfs-root/usr/lib",
    "host": "localhost",
    "port": 12345,
    "auto_connect": true,
    "reconnect_on_failure": true,
    "use_mock": false,
    "connection_method": "launcher",
    "script_path": "freecad_script.py",
    "launcher_path": "freecad_launcher.py",
    "use_apprun": true,
    "apprun_path": "squashfs-root/AppRun"
  },
  "cors": {
    "origins": ["*"],
    "allow_credentials": true,
    "methods": ["*"],
    "headers": ["*"]
  },
  "logging": {
    "level": "INFO",
    "file": "mcp_freecad.log",
    "max_size": 10485760,
    "backup_count": 3
  },
  "performance": {
    "monitoring_enabled": true,
    "metrics_retention": 3600,
    "sample_rate": 1.0
  },
  "tools": {
    "enable_smithery": true,
    "enable_primitives": true,
    "enable_model_manipulation": true,
    "enable_export_import": true,
    "default_timeout": 30.0,
    "max_concurrent_tools": 5,
    "measurement": {
      "enabled": true,
      "units": "mm",
      "precision": 3,
      "supported_measurements": [
        "distance",
        "angle",
        "area",
        "volume",
        "center_of_mass",
        "bounding_box"
      ]
    },
    "code_generation": {
      "enabled": true,
      "snippets_dir": "~/.freecad/mcp/snippets",
      "max_history_size": 100,
      "supported_operations": [
        "generate_script",
        "execute_script",
        "save_snippet",
        "load_snippet",
        "get_script_history",
        "generate_primitive_script",
        "generate_transform_script",
        "generate_boolean_script"
      ],
      "primitive_types": [
        "box",
        "cylinder",
        "sphere",
        "cone",
        "torus"
      ],
      "transform_types": [
        "translate",
        "rotate",
        "scale"
      ],
      "boolean_operations": [
        "union",
        "difference",
        "intersection"
      ]
    }
  }
}
