{
  "auth": {
    "api_key": "development",
    "enabled": true
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug": false,
    "workers": 1,
    "name": "freecad-mcp-server",
    "version": "0.1.0"
  },
  "cache": {
    "default_ttl": 30.0,
    "max_size": 100,
    "enabled": true
  },
  "recovery": {
    "max_retries": 5,
    "retry_delay": 2.0,
    "backoff_factor": 1.5,
    "max_delay": 30.0
  },
  "freecad": {
    "path": "/usr/bin/freecad",
    "python_path": "/usr/lib/freecad-python3/lib",
    "server_port": 12345,
    "auto_connect": false,
    "reconnect_on_failure": true,
    "use_mock": true,
    "connection_method": "auto",
    "host": "localhost",
    "port": 12345,
    "freecad_path": "freecad"
  },
  "cors": {
    "origins": ["*"],
    "allow_credentials": true,
    "methods": ["*"],
    "headers": ["*"]
  },
  "logging": {
    "level": "INFO",
    "file": "mcp_freecad.log",
    "max_size": 10485760,
    "backup_count": 3
  },
  "performance": {
    "monitoring_enabled": true,
    "metrics_retention": 3600,
    "sample_rate": 1.0
  },
  "tools": {
    "enable_smithery": true,
    "enable_primitives": true,
    "enable_model_manipulation": true,
    "enable_export_import": true
  }
} 