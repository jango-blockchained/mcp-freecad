{
    "server": {
        "host": "0.0.0.0",
        "port": 8000,
        "debug": false,
        "workers": 1
    },
    "auth": {
        "api_key": "development",
        "enable_auth": true
    },
    "cache": {
        "default_ttl": 30.0,
        "max_size": 100,
        "enable_cache": true
    },
    "recovery": {
        "max_retries": 5,
        "retry_delay": 2.0,
        "backoff_factor": 1.5,
        "max_delay": 30.0
    },
    "freecad": {
        "path": "",
        "auto_connect": true,
        "reconnect_on_failure": true
    },
    "cors": {
        "origins": ["*"],
        "allow_credentials": true,
        "methods": ["*"],
        "headers": ["*"]
    },
    "logging": {
        "level": "INFO",
        "file": "mcp_freecad.log",
        "max_size": 10485760,
        "backup_count": 3
    },
    "performance": {
        "enable_monitoring": true,
        "metrics_retention_time": 3600,
        "sample_rate": 1.0
    }
}